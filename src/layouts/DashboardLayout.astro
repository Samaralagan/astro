---
// src/layouts/DashboardLayout.astro
import "../styles/global.css"; // Make sure this exists for Tailwind to work
import favicon from "../assets/favicon.png";
interface Props {
  title: string;
  currentPage?: string;
}

const { title, currentPage = "overview" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Dashboard</title>
    <link rel="icon" type="image/svg+xml" href={favicon.src} />
  </head>
  <body class="bg-gray-50">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside
        class="w-64 bg-white border-r border-gray-200 fixed h-full overflow-y-auto"
      >
        <div class="p-4 flex items-center space-x-3">
          <div class="text-blue-600 text-2xl">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h1 class="text-lg font-semibold">AI Marketing Agent</h1>
        </div>

        <nav class="mt-4">
          <a
            href="/dashboard"
            class={`flex items-center px-4 py-3 ${currentPage === "overview" ? "bg-blue-50 text-blue-600" : "text-gray-700 hover:bg-gray-100"}`}
          >
            <div class="w-8 h-8 flex items-center justify-center">
              <div
                class={`w-2 h-2 rounded-full ${currentPage === "overview" ? "bg-blue-600" : "bg-transparent"}`}
              >
              </div>
            </div>
            <span>Overview</span>
          </a>

          <a
            href="/dashboard/campaigns"
            class={`flex items-center px-4 py-3 ${currentPage === "campaigns" ? "bg-blue-50 text-blue-600" : "text-gray-700 hover:bg-gray-100"}`}
          >
            <div class="w-8 h-8 flex items-center justify-center">
              <div
                class={`w-2 h-2 rounded-full ${currentPage === "campaigns" ? "bg-blue-600" : "bg-transparent"}`}
              >
              </div>
            </div>
            <span>Campaigns</span>
          </a>

          <a
            href="/dashboard/audiences"
            class={`flex items-center px-4 py-3 ${currentPage === "audiences" ? "bg-blue-50 text-blue-600" : "text-gray-700 hover:bg-gray-100"}`}
          >
            <div class="w-8 h-8 flex items-center justify-center">
              <div
                class={`w-2 h-2 rounded-full ${currentPage === "audiences" ? "bg-blue-600" : "bg-transparent"}`}
              >
              </div>
            </div>
            <span>Audiences</span>
          </a>

          <a
            href="/dashboard/chatbot"
            class={`flex items-center px-4 py-3 ${currentPage === "chatbot" ? "bg-blue-50 text-blue-600" : "text-gray-700 hover:bg-gray-100"}`}
          >
            <div class="w-8 h-8 flex items-center justify-center">
              <div
                class={`w-2 h-2 rounded-full ${currentPage === "chatbot" ? "bg-blue-600" : "bg-transparent"}`}
              >
              </div>
            </div>
            <span>Chatbot</span>
          </a>

          <a
            href="/dashboard/settings"
            class={`flex items-center px-4 py-3 ${currentPage === "settings" ? "bg-blue-50 text-blue-600" : "text-gray-700 hover:bg-gray-100"}`}
          >
            <div class="w-8 h-8 flex items-center justify-center">
              <div
                class={`w-2 h-2 rounded-full ${currentPage === "settings" ? "bg-blue-600" : "bg-transparent"}`}
              >
              </div>
            </div>
            <span>Settings</span>
          </a>
        </nav>
      </aside>

      <!-- Main Content -->
      <main class="ml-64 flex-1">
        <header
          class="bg-white border-b border-gray-200 h-16 flex items-center justify-between px-6"
        >
          <h1 class="text-xl font-semibold">{title}</h1>
          <div class="flex items-center space-x-4">
            <button class="text-gray-500 hover:text-gray-700">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </button>
            <button class="text-gray-500 hover:text-gray-700">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                ></path>
              </svg>
            </button>
            <button class="text-gray-500 hover:text-gray-700">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </button>
          </div>
        </header>

        <div class="p-6">
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>
