---
// src/layouts/DashboardLayout.astro
import "../styles/global.css"; // Make sure this exists for Tailwind to work
import logo from "../assets/logo.svg";
import favicon from "../assets/favicon.png";
interface Props {
  title: string;
  currentPage?: string;
}

const { title, currentPage = "overview" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Dashboard</title>
    <link rel="icon" type="image/svg+xml" href={favicon.src} />
  </head>
  <body class="bg-gray-50">
    <div class="flex min-h-screen relative">
      <!-- Mobile menu overlay -->
      <div
        id="mobile-overlay"
        class="fixed inset-0 bg-gray-900 bg-opacity-50 z-20 hidden lg:hidden"
      >
      </div>

      <!-- Sidebar -->
      <aside
        id="sidebar"
        class="bg-white border-r border-gray-200 fixed h-full overflow-y-auto transition-all duration-300 w-16 z-30 transform lg:transform-none lg:translate-x-0"
        style={{ overflowX: "clip" }}
      >
        <div class="p-4 flex items-center justify-center">
          <!-- Small logo (visible when collapsed) - Using favicon -->
          <div id="small-logo" class="text-[#D80032] text-2xl block">
            <img src={favicon.src} alt="Logo" class="h-8 w-8" />
          </div>

          <!-- Full logo (visible when expanded) - Using the imported logo -->
          <div id="full-logo" class="hidden">
            <div class="flex items-center space-x-3">
              <img src={logo.src} alt="Company Logo" class="h-8" />
            </div>
          </div>
        </div>

        <nav class="mt-4">
          <a
            href="/dashboard"
            class={`flex items-center py-3 ${currentPage === "overview" ? "bg-[#F9DEC9] text-[#D80032]" : "text-[#3D0C11] hover:bg-[#F9DEC9] hover:text-[#D80032]"}`}
          >
            <div class="w-16 flex items-center justify-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                ></path>
              </svg>
            </div>
            <span class="sidebar-text opacity-0 whitespace-nowrap"
              >Overview</span
            >
          </a>

          <a
            href="/dashboard/EmailMarketing"
            class={`flex items-center py-3 ${currentPage === "EmailMarketing" ? "bg-[#F9DEC9] text-[#D80032]" : "text-[#3D0C11] hover:bg-[#F9DEC9] hover:text-[#D80032]"}`}
          >
            <div class="w-16 flex items-center justify-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"></path>
              </svg>
            </div>
            <span class="sidebar-text opacity-0 whitespace-nowrap"
              >Email Marketing</span
            >
          </a>

          <a
            href="/dashboard/SocialMedia"
            class={`flex items-center py-3 ${currentPage === "SocialMedia" ? "bg-[#F9DEC9] text-[#D80032]" : "text-[#3D0C11] hover:bg-[#F9DEC9] hover:text-[#D80032]"}`}
          >
            <div class="w-16 flex items-center justify-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
            </div>
            <span class="sidebar-text opacity-0 whitespace-nowrap"
              >Social Media</span
            >
          </a>

          <a
            href="/dashboard/chatbot"
            class={`flex items-center py-3 ${currentPage === "chatbot" ? "bg-[#F9DEC9] text-[#D80032]" : "text-[#3D0C11] hover:bg-[#F9DEC9] hover:text-[#D80032]"}`}
          >
            <div class="w-16 flex items-center justify-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
                ></path>
              </svg>
            </div>
            <span class="sidebar-text opacity-0 whitespace-nowrap">Chatbot</span
            >
          </a>

          <a
            href="/dashboard/settings"
            class={`flex items-center py-3 ${currentPage === "settings" ? "bg-[#F9DEC9] text-[#D80032]" : "text-[#3D0C11] hover:bg-[#F9DEC9] hover:text-[#D80032]"}`}
          >
            <div class="w-16 flex items-center justify-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <span class="sidebar-text opacity-0 whitespace-nowrap"
              >Settings</span
            >
          </a>

          <!-- Logout option (added) -->
          <a
            href="/"
            class="flex items-center py-3 text-[#3D0C11] hover:bg-[#F9DEC9] hover:text-[#D80032] mt-auto"
          >
            <div class="w-16 flex items-center justify-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                ></path>
              </svg>
            </div>
            <span class="sidebar-text opacity-0 whitespace-nowrap">Logout</span>
          </a>
        </nav>

        <!-- Toggle button at bottom of sidebar -->
        <div class="absolute bottom-4 left-0 right-0 flex justify-center">
          <button
            id="toggle-sidebar"
            class="bg-white rounded-full p-1 border border-gray-200 text-[#3D0C11] hover:text-[#D80032] shadow-sm transition-all duration-300 hidden lg:block"
          >
            <svg
              id="expand-icon"
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 5l7 7-7 7"></path>
            </svg>
            <svg
              id="collapse-icon"
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 hidden"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M11 19l-7-7 7-7"></path>
            </svg>
          </button>
        </div>
      </aside>

      <!-- Main Content -->
      <main
        id="main-content"
        class="ml-0 lg:ml-16 flex-1 transition-all duration-300 w-full"
      >
        <header
          class="bg-white border-b border-gray-200 h-16 flex items-center justify-between px-4 lg:px-6 sticky top-0 z-10"
        >
          <!-- Mobile menu button -->
          <button id="mobile-menu-button" class="text-[#3D0C11] mr-2 lg:hidden">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>

          <h1 class="text-lg lg:text-xl font-semibold text-[#3D0C11] truncate">
            {title}
          </h1>
          <div class="flex items-center space-x-2 lg:space-x-4">
            <button class="text-[#3D0C11] hover:text-[#D80032]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 lg:h-6 lg:w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </button>
            <button class="text-[#3D0C11] hover:text-[#D80032]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 lg:h-6 lg:w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                ></path>
              </svg>
            </button>
            <button class="text-[#3D0C11] hover:text-[#D80032]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 lg:h-6 lg:w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </button>
          </div>
        </header>

        <div class="p-4 lg:p-6">
          <slot />
        </div>
      </main>
    </div>

    <script>
      // Add client-side JavaScript for sidebar toggle functionality
      document.addEventListener("DOMContentLoaded", () => {
        const sidebar = document.getElementById("sidebar");
        const mainContent = document.getElementById("main-content");
        const toggleButton = document.getElementById("toggle-sidebar");
        const expandIcon = document.getElementById("expand-icon");
        const collapseIcon = document.getElementById("collapse-icon");
        const smallLogo = document.getElementById("small-logo");
        const fullLogo = document.getElementById("full-logo");
        const sidebarTexts = document.querySelectorAll(".sidebar-text");
        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const mobileOverlay = document.getElementById("mobile-overlay");

        let sidebarExpanded = false;
        let sidebarVisible = window.innerWidth >= 1024; // lg breakpoint

        // Function to handle sidebar visibility on mobile
        const toggleMobileSidebar = () => {
          if (sidebar.classList.contains("-translate-x-full")) {
            // Show sidebar
            sidebar.classList.remove("-translate-x-full");
            mobileOverlay.classList.remove("hidden");
          } else {
            // Hide sidebar
            sidebar.classList.add("-translate-x-full");
            mobileOverlay.classList.add("hidden");
          }
        };

        // Initialize mobile sidebar position
        if (window.innerWidth < 1024) {
          sidebar.classList.add("-translate-x-full");
        }

        // Toggle sidebar expansion (desktop)
        toggleButton.addEventListener("click", () => {
          sidebarExpanded = !sidebarExpanded;

          if (sidebarExpanded) {
            // Expand sidebar
            sidebar.classList.remove("w-16");
            sidebar.classList.add("w-64");
            mainContent.classList.remove("lg:ml-16");
            mainContent.classList.add("lg:ml-64");
            expandIcon.classList.add("hidden");
            collapseIcon.classList.remove("hidden");
            smallLogo.classList.add("hidden");
            fullLogo.classList.remove("hidden");

            // Show text with a slight delay for smoother transition
            setTimeout(() => {
              sidebarTexts.forEach((text) => {
                text.classList.remove("opacity-0");
              });
            }, 150);
          } else {
            // Collapse sidebar
            sidebar.classList.remove("w-64");
            sidebar.classList.add("w-16");
            mainContent.classList.remove("lg:ml-64");
            mainContent.classList.add("lg:ml-16");
            expandIcon.classList.remove("hidden");
            collapseIcon.classList.add("hidden");
            smallLogo.classList.remove("hidden");
            fullLogo.classList.add("hidden");

            // Hide text immediately
            sidebarTexts.forEach((text) => {
              text.classList.add("opacity-0");
            });
          }
        });

        // Mobile menu button event
        mobileMenuButton.addEventListener("click", toggleMobileSidebar);

        // Close sidebar when clicking overlay
        mobileOverlay.addEventListener("click", toggleMobileSidebar);

        // Handle window resize
        window.addEventListener("resize", () => {
          const isDesktop = window.innerWidth >= 1024;

          // Toggle between mobile and desktop layouts
          if (isDesktop && !sidebarVisible) {
            sidebar.classList.remove("-translate-x-full");
            mobileOverlay.classList.add("hidden");
            sidebarVisible = true;
          } else if (!isDesktop && sidebarVisible) {
            sidebar.classList.add("-translate-x-full");
            sidebarVisible = false;
          }
        });
      });
    </script>
  </body>
</html>
