---
import "../styles/global.css";
import Navbar from "../components/Navbar.jsx";
import Footer from "../components/Footer.jsx";

const { title = "Default Title" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Your Company</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      #particles-js {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        background-color: #f8f9fa; /* Light background color */
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col">
    <div id="particles-js"></div>
    <Navbar client:load />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />

    <!-- Load particles.js from CDN -->
    <script
      is:inline
      src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"
    ></script>

    <!-- Initialize particles.js -->
    <script is:inline>
      document.addEventListener("DOMContentLoaded", function () {
        particlesJS("particles-js", {
          particles: {
            number: {
              value: 80,
              density: {
                enable: true,
                value_area: 800,
              },
            },
            color: {
              value: ["#0066cc", "#000000"], // Blue and Black colors
            },
            shape: {
              type: "circle",
              stroke: {
                width: 0,
                color: "#000000",
              },
              polygon: {
                nb_sides: 5,
              },
            },
            opacity: {
              value: 0.2, // Reduced opacity to 0.2 as requested
              random: false,
              anim: {
                enable: false,
                speed: 0.2,
                opacity_min: 0.1,
                sync: false,
              },
            },
            size: {
              value: 3,
              random: true,
              anim: {
                enable: false,
                speed: 5,
                size_min: 0.1,
                sync: false,
              },
            },
            line_linked: {
              enable: true,
              distance: 150,
              color: "#0066cc", // Blue color for connecting lines
              opacity: 0.15, // Further reduced line opacity
              width: 1,
            },
            move: {
              enable: true,
              speed: 0.1, // Extremely slow movement (3x slower than before)
              direction: "none",
              random: false,
              straight: false,
              out_mode: "out",
              bounce: false,
              attract: {
                enable: true,
                rotateX: 50, // Further reduced rotation speed
                rotateY: 100, // Further reduced rotation speed
              },
            },
          },
          interactivity: {
            detect_on: "canvas",
            events: {
              onhover: {
                enable: true,
                mode: "grab",
              },
              onclick: {
                enable: true,
                mode: "push",
              },
              resize: true,
            },
            modes: {
              grab: {
                distance: 140,
                line_linked: {
                  opacity: 0.4, // Made interaction lines more subtle
                },
              },
              bubble: {
                distance: 400,
                size: 40,
                duration: 2,
                opacity: 0.3, // Reduced bubble opacity
                speed: 1, // Slowed down bubble effect
              },
              repulse: {
                distance: 200,
                duration: 1.0, // Made repulse effect last longer
              },
              push: {
                particles_nb: 2, // Fewer particles added on click
              },
              remove: {
                particles_nb: 1,
              },
            },
          },
          retina_detect: true,
        });
      });
    </script>
  </body>
</html>
